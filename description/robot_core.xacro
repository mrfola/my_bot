<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK -->
    <link name="base_link">

    </link>

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
            <child link="base_footprint"/>
            <origin xyz="0 0 0" rpy="0 0 ${pi/2}" />
    </joint>

    <link name="base_footprint">

    </link>

    <!-- CHASSIS LINK -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="chassis"/>
    </joint>

    <!-- Length= 310mm (approx), 
    width= 160mm, 
    height= 164mm,
    side panel extrusion= 20mm
    middle length (bottom)= 120mm -->
    <link name="chassis">
        <visual>
            <origin xyz=".060 -0.060 0"/>
            <geometry>
                <mesh filename="file://$(find my_bot)/description/meshes/forklift_chassis.stl" scale=".001 .001 .001"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz=".060 -0.060 0"/>
            <geometry>
                <mesh filename="file://$(find my_bot)/description/meshes/forklift_chassis.stl" scale=".001 .001 .001 " />
            </geometry>
        </collision>
        <!-- <inertial>
            <origin xyz=".060 -.228 0"/>
            <mass value="0.1" />
            <inertia ixx="" ixy="" ixz="" iyy="" iyz="" izz="" />
        </inertial> -->
    </link>

<!-- BACK LEFT WHEEL LINK -->
    <joint name="back_left_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="back_left_wheel"/>
        <origin xyz=".080 ${.168 - .040} -.005" rpy="-${pi/2} 0 -${pi/2}"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="back_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="${.067/2}" length="0.0255"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${.067/2}" length="0.0255"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.04" length="0.0255" radius="${.067/2}">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

<!-- BACK RIGHT WHEEL LINK -->
    <joint name="back_right_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="back_right_wheel"/>
        <origin xyz="-.080 ${.168 - .040} -.005" rpy="-${pi/2} 0 ${pi/2}"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="back_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="${.067/2}" length="0.0255"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${.067/2}" length="0.0255"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.04" length="0.0255" radius="${.067/2}">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- CASTER WHEEL LINK -->
 <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0 -${.168 - .040} ${(-.067/2) + 0.0127}"/> 
    </joint>
            <!-- For the z axis of the origin, I brought the castor wheel down by the radius of the back tires (hence -0.067/2) as they are on the same plane
        but then I brought it up by it's own radius to make the bottom of the wheel to line up with the bottom of the back tires (hence + 0.0127)
         -->

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.0127"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.0127">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

</robot>